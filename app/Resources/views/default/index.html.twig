{% extends 'base.html.twig' %}

{% block body %}
<h1>Accueil</h1>

{% if posts is empty %}
<p>Aucun article</p>
{% else %}
  {% for post in posts %}
    <h2>{{ post.titre }}</h2>
    <p>
      <small>Rédigé par {{ post.auteur.username }}
        le {{ post.datePublication|date('d/m/Y à H') }}h
      </small>
    </p>
    <p>{{ post.contenu|raw }}</p>
  {% endfor %}
{% endif %}
{% endblock %}
